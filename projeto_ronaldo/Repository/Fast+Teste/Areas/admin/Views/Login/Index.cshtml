@model Business.Models.Conferente
@{
    Layout = null; 
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Login</title>
        <link href="~/lib/bootstrap-5.3.5-dist/css/boostrap.css" rel="stylesheet" />
    </head>
    <body>
        <div class "container">
            <div class "row">
                <div class="col-md-4 offset-md-4">
                    <h2>Login</h2>
                    <form asp-area="admin" asp-controller="login" asp-action="Logar" method="post">
                        <div style="color: red">@ViewBag.ErrorLogin</div>
                        <div class="mb-3">
                            <label>Login</label>
                            <input type="text" asp-for="login" class="form-control"/>
                            <div style="color : red">@Html.ValidationMessageFor(x => x.login)</div>
                        </div>
                        <div class="mb-3">
                            <label>Login</label>
                            <input type="text" asp-for="senha" class="form-control"/>
                            <div style="color : red">@Html.ValidationMessageFor(x => x.senha)</div>
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>