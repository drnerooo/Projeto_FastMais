@{
    ViewData["Title"] = "Homepage do Entregador";
}

<h2>Bem-vindo, Entregador!</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Entregas Pendentes</h5>
                <p class="card-text">Visualize os pedidos prontos para entrega.</p>
                <a asp-controller="Conferente" asp-action="Create" class="btn btn-success">Ver Entregas</a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Relatório de Entregas</h5>
                <p class="card-text">Acompanhe seu desempenho e histórico de entregas.</p>
                <a asp-controller="Conferente" asp-action="Relatorio" class="btn btn-success">Ver Relatório</a>
            </div>
        </div>
    </div>
</div>
